@model IEnumerable<Patient>
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Appointment</h2>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Patient Name</th>
                        <th scope="col">Appointment Date</th>
                        <th scope="col">Appointment Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.patientId</th>
                            <th>@item.PatientName</th>
                            <th>@item.AppointmentDate</th>
                            <th>@item.AppointmentTime</th>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>