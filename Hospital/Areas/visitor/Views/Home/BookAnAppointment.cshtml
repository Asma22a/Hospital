@model IEnumerable<Doctor>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-2">
        <form class="d-flex mt-3 mt-lg-0">
            <input class="form-control me-2" type="search" placeholder="Doctor Name or Specialization"  name="DoctorNameOrSpecialization">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div class=" py-5 row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card " style="width: 15rem;">
                        <img src="~/images/@item.Img" class="card-img-top" alt="..." style="width:100%;height:220px">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Specialization</p>
                            <div class="text-center">
                                <a href="/visitor/Home/formAppointment/@item.Id" class="btn btn-primary">Book Appointment</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<div class="row my-5">
    <div class="col-12 d-flex justify-content-center align-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="">1</a></li>
            </ul>
        </nav>
    </div>
</div>
