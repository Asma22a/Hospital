@model IEnumerable<Doctor>

@{
    var i = 0;
}
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Doctors</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Home/NewDoctor" class="btn btn-success">Create</a>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Doctor Name</th>
                        <th scope="col">Specialization</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(++i)</th>
                            <td>@item.Name</td>
                            <td>@item.Specialization</td>
                            <td>
                                <a href="/Admin/Home/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                                <a href="/Admin/Home/Delete/@item.Id" type="button" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
